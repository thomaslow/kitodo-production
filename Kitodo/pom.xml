                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <mainClass>org.kitodo.demo.KitodoEnvironmentBuilder</mainClass>
                            <async>true</async>
                            <classpathScope>test</classpathScope>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
